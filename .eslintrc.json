{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true,
        "jquery": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error","double"],
        "no-restricted-globals": ["off", "isNan"],
        "no-console": "off",
        "no-unused-expressions": ["error", {"allowTernary": true}]
    }
}
